/*通过jdbc-odbc操作数据库
 * 操作STUDENTS表
 * 1.先进性数据源的配置，再面板，系统 ，管理工具，odbc
 * 2.再程序中连接数据源
 * 
 * */
package com.dboperition;
import java.sql.*;

public class dbop {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		try {
			//1.加载驱动:把需要的驱动程序加入内存
			
			Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
			//2.得到连接 制定连接到哪个数据源（之前设置的）
			
			Connection ct = DriverManager.getConnection("jdbc:odbc:MyDB2012");//选择的是windows验证，所以不需要用户名和密码的验证
			//3.创建statement或者preparedstatement
			//主要用于发送sql语句
			Statement sm = ct.createStatement();
			//4执行语句
			//添加.删除。修改可以使用此语句
			sm.executeUpdate("insert into STUDENTS values('小屋','89089080')");
		} catch (Exception e) {
			// TODO: handle exception
		}finally{
			//关闭一些资源
		}
	}

}
